<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">

    <include layout="@layout/layout_common_titlebar"/>

    <TextView
        android:id="@+id/tv_select_video"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/common_recyclerview_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/select_video"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/activity_line" />

    <TextView
        android:id="@+id/tv_take_video"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_recyclerview_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/take_video"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
</LinearLayout>